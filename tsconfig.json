{
  "include": ["./src", "./proact"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "proact/jsx",
    "paths": {
      "proact": ["./proact/index"],
      "proact/*": ["./proact/*"]
    }
  }
}